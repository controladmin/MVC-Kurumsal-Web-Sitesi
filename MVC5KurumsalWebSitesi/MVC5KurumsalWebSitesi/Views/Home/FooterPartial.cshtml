@*_SiteLayout içindeki Footer kodları alanı bu partial içine taşındı ve _SiteLayout içinde partial olarak çağrıldı*@

@*<script src="~/Scripts/jquery-3.4.1.min.js"></script>*@
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Kurumsal Web Sitesi</h5>
                    <address>
                        <strong>@ViewBag.iletisim.Adres</strong><br>
                    </address>
                    <p>
                        <i class="icon-phone"></i>@ViewBag.iletisim.Telefon <br />
                        <i class="icon-envelope-alt"></i>@ViewBag.iletisim.Mail<br />
                        <i class="icon-phone"></i>@ViewBag.iletisim.Whatsapp <br />
                        <i class="icon-envelope-alt"></i>@ViewBag.iletisim.Fax
                    </p>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Menü</h5>
                    <ul class="link-list">
                        <li><a href="/Anasayfa/">Ana Sayfa</a></li>
                        <li><a href="/About/">Hakkımızda</a></li>
                        <li><a href="/BlogPost/">Blog</a></li>
                        <li><a href="/Service/">Hizmetler</a></li>
                        <li><a href="/Iletisim/">İletişim</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Son Blog Yazıları</h5>
                    <ul class="link-list">
                        @foreach (var item in ViewBag.blog)
                        {
                            <li><a href="/BlogDetay/@item.BlogId">@item.Baslik</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="widget">
                    <h5 class="widgetheading">Hizmetlerimiz</h5>
                    <div class="flickr_badge">
                        @foreach (var item in ViewBag.hizmet)
                        {
                            <img src="@item.ImageUrl" alt="" width="75" height="30" />
                        }
                    </div>
                    <div class="clear">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="sub-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="copyright">
                        <p> @DateTime.Now.Year  &copy; Tüm hakları gizlidir.</p>
                        <div class="credits">
                            Kurumsal Web Sitesi
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ul class="social-network">
                        <li><a href="#" data-placement="top" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#" data-placement="top" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#" data-placement="top" title="Linkedin"><i class="fa fa-instagram"></i></a></li>
                        <li><a href="https://www.google.com" data-placement="top" title="Google plus"><i class="fa fa-google-plus"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>
