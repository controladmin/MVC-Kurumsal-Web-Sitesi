@model MVC5KurumsalWebSitesi.Models.Model.Context.Service

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmet Düzenleme Sayfası</h2>

<div class="form">
    @*burada action kısmına Model.ServiceID yazmaz isek resim bir nesnenin öğesine ayarlanmadı hatası verir*@
    <form class="form-validate form-horizontal" id="edit" method="post" action="/Services/Edit/@Model.ServiceId" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="baslik" name="Baslik" minlength="5" type="text" value="@Model.Baslik" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="Aciklama" class="ckeditor" required>@Model.Aciklama</textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input class="form-control " id="image" type="file" name="ImageUrl" accept=".png,.jpg,.jpeg" />
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Önceki Resim</label>
            <div class="col-lg-10">
                <img class="img-responsive" src="@Model.ImageUrl" alt="" style="border-radius:" width="100" height="100" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit" style="color:black">Bilgileri Güncelle</button>
                <button class="btn btn-warning" style="color:black" type="button"><a href="/Services/Index/"> İptal</a></button>
            </div>
        </div>
    </form>
</div>


<div>
    @Html.ActionLink("Liste Sayfasına Geri Dön", "Index")
</div>

@*ckeditor çalışması için bu script ifadesini ekliyoruz*@
<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

