@model MVC5KurumsalWebSitesi.Models.Model.Context.Blog
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Düzenleme Sayfası</h2>
<br />
<div class="form">
    <form class="form-validate form-horizontal" id="edit" method="post" action="/Blog/Edit/@Model.BlogId" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="baslik" name="Baslik" minlength="5" type="text" value="@Model.Baslik" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">İçerik <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="Icerik" class="ckeditor" required>@Model.Icerik</textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("CategoriId", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input class="form-control " id="image" type="file" name="ImageUrl" accept=".png,.jpg,.jpeg" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit" style="color:black">Bilgileri Güncelle</button>
                <button class="btn btn-warning" style="color:black" type="button"><a href="/Blog/Index/"> İptal</a></button>
            </div>
        </div>
    </form>
</div>


@Html.ActionLink("Blog Listesine Geri Dön", "Index")

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

