@using MVC5KurumsalWebSitesi.Models.Model.Context
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<script>

    $(document).ready(function () {
        let table = new DataTable('#myTable', {
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });

</script>


<style>
    thead th {
        background: #a52a2a;
        color: white !important;
    }

    tbody tr:nth-child(odd) {
        background: #00ced1;
    }

    tbody tr:nth-child(even) {
        background: #8fbc8f;
    }
</style>

<h2>Blog Listesi</h2>
<br />
<a href="/Blog/Create/" class="btn btn-default">Yeni Blog Ekle</a>
<br />
<br />
<table class="table table-bordered table table-hover" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Kategori</th>
            <th>Resim</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sayac++;
            <tr>
                <td>@sayac</td>
                <td>@item.Baslik</td>
                <td>@Html.Raw(item.Icerik)</td>
                <td>@item.Categori.CategoriName</td>
                <td>  <img class="img-responsive" src="@item.ImageUrl" alt="" style="border-radius:" width="100" height="100" /></td>
                <td><a href="/Blog/Edit/@item.BlogId/" class="btn btn-info">Güncelle</a></td>
                <td><a href="/Blog/Delete/@item.BlogId" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>




