@model MVC5KurumsalWebSitesi.Models.Model.Context.About

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h3>Kaydı silmek istediğinizden eminmisiniz?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.Raw(Model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Kaydı Sil" class="btn btn-warning" style="color:black" />
            @Html.ActionLink("Liste Sayfasına Geri Dön", "Index")
        </div>
    }
</div>
