
@{
    Layout = null;
}

<style>
    .form-gap {
        padding-top: 70px;
    }
</style>

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Şifremi Unuttum</title>
    <!-- Bootstrap CSS -->
    <link href="/TemplateFolder/AdminLayout/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="/TemplateFolder/AdminLayout/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="/TemplateFolder/AdminLayout/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="/TemplateFolder/AdminLayout/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="/TemplateFolder/AdminLayout/css/style.css" rel="stylesheet">
    <link href="/TemplateFolder/AdminLayout/css/style-responsive.css" rel="stylesheet" />
</head>
<body>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
    <div class="form-gap"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">Şifrenizi mi Unuttunuz?</h2>
                            <p>Şifrenizi Buradan Resetleye bilirsiniz</p>
                            <div class="panel-body">
                                @using (Html.BeginForm("ForgetPassword", "Admin", FormMethod.Post, new { enctype = "multipart/data-from" }))
                                {
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                            <input id="email" name="email" placeholder="Mail adresinizi giriniz" class="form-control" type="email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input name="recover-submit" class="btn btn-lg btn-primary btn-block" value="Yeni Şifre Gönder" type="submit">
                                    </div>

                                    <input type="hidden" class="hide" name="token" id="token" value="">
                                }
                                <p class="text-danger">@ViewBag.uyari</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    }
</body>
</html>
