@model IEnumerable<MVC5KurumsalWebSitesi.Models.Model.Context.Categori>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<script>

    $(document).ready(function () {
        let table = new DataTable('#myTable', {
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });

</script>

@*admin layout içindeki main content kodlarını alıp buradaki index içine taşıdık oraya renderbody ifadesini ekledik*@

@if ((string)TempData["mesaj"] == "insert")
{
    <div class="alert alert-success alert-dismissable" role="alert">
        <strong>Kayıt sisteme eklendi</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if ((string)TempData["mesaj"] == "update")
{
    <div class="alert alert-info alert-dismissable" role="alert">
        <strong>Kayıt Güncellendi</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if ((string)TempData["mesaj"] == "delete")
{
    <div class="alert alert-warning alert-dismissable" role="alert">
        <strong>Kayıt silindi</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box blue-bg">
            <i class="fa fa fa-book"></i>
            <div class="count">@ViewBag.blogcount</div>
            <div class="title">Blog Sayısı</div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->

    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box brown-bg">
            <i class="fa fa-barcode "></i>
            <div class="count">@ViewBag.categoricount</div>
            <div class="title">Kategori Sayısı</div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->

    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box dark-bg">
            <i class="fa fa-briefcase"></i>
            <div class="count">@ViewBag.servicecount</div>
            <div class="title">Hizmet Sayısı</div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->

    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box green-bg">
            <i class="fa fa-comment"></i>
            <div class="count">@ViewBag.commentcount</div>
            <div class="title">Yorum Sayısı</div>
        </div>
        <!--/.info-box-->
    </div>
    <!--/.col-->

</div>

<div class="text-right">
    <div class="credits">

        @DateTime.Now.Year  Designed by <a href="#">Kurumsal Admin</a>
    </div>
</div>




